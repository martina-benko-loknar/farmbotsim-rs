    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Custom launch",
            "targetCreateCommands": [
                "target create ${workspaceFolder}/target/debug/farmbotsim-rs"
            ],
            "processCreateCommands": [
                "settings set target.run-args value1 value2 value3",
                "process launch"
            ]
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'farmbotsim-rs'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=farmbotsim-rs",
                    "--package=farmbotsim-rs"
                ],
                "filter": {
                    "name": "farmbotsim-rs",
                    "kind": "bin"
                }
            },
            "args": ["--experiment"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'farmbotsim-rs'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=farmbotsim-rs",
                    "--package=farmbotsim-rs"
                ],
                "filter": {
                    "name": "farmbotsim-rs",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}